{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "windows": {
                "command": "cd kataru-godot && cargo build --target x86_64-pc-windows-msvc --all-features"
            },
            "linux": {
                "command": "cd kataru-godot && cargo build --target x86_64-unknown-linux-gnu --all-features"
            }
        },
        {
            "label": "build (release)",
            "type": "shell",
            "windows": {
                "command": "cd kataru-godot && cargo build --target x86_64-pc-windows-msvc --all-features --release"
            },
            "linux": {
                "command": "cd kataru-godot && cargo build --target x86_64-unknown-linux-gnu --all-features --release"
            }
        }
    ]
}